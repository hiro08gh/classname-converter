{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["es6", "es2015", "dom"],
		"declaration": true,
		"outDir": "dist",
		"rootDir": "lib",
		"strict": true,
		"moduleResolution": "node",
		"types": ["node"],
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["lib/**/*.ts"]
}
